<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="240dp"
    android:id="@+id/panel">

    <RadioGroup
        android:id="@+id/select_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/object_point"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:background="@drawable/selector_radiobutton"/>

        <RadioButton
            android:id="@+id/object_line"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selector_radiobutton"/>
        <RadioButton
            android:id="@+id/object_polygon"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/selector_radiobutton"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/point_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_object"
        tools:ignore="UnknownId">
        <include layout="@layout/operation_panel_point" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_object"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <com.zhangtao.buildingidentification.Views.Circle_ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@mipmap/delete_btn"
            android:background="@drawable/shape_panel_circle"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:rotation="45"
            android:layout_below="@+id/to_up"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加中点"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/polygon_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_object"
        android:layout_centerInParent="true"
        android:visibility="gone">

    <include layout="@layout/operation_panel_polygon"/>

    </LinearLayout>
</RelativeLayout>