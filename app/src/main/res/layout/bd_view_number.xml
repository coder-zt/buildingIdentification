<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bd_view_number_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="类字型"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#000"/>
<View
    android:layout_width="0.5dp"
    android:layout_height="30dp"
    android:layout_toRightOf="@+id/title"
    android:background="#fff"/>

    <ImageView
        android:id="@+id/reduce_btn"
        android:layout_toRightOf="@+id/title"
        android:layout_width="30dp"
        android:padding="5dp"
        android:layout_height="30dp"
        android:src="@mipmap/reduce" />
    <EditText
        android:id="@+id/value"
        android:layout_toRightOf="@+id/reduce_btn"
        android:layout_width="50dp"
        android:text="10"
        android:gravity="center"
        android:layout_height="30dp"
        android:background="#eee" />

    <ImageView
        android:id="@+id/puls_btn"
        android:layout_toRightOf="@+id/value"
        android:layout_width="30dp"
        android:padding="5dp"
        android:layout_height="30dp"
        android:src="@mipmap/puls" />

</RelativeLayout>