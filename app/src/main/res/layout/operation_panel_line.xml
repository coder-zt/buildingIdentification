<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="370dp"
    android:layout_height="200dp"
    android:background="#eeefefef">

    <LinearLayout
        android:id="@+id/type_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#999"
        android:layout_marginTop="10dp">

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="类型："
           android:textColor="#000"
           android:layout_weight="2"
           android:textSize="18sp"
           android:gravity="center"/>

        <TextView
            android:id="@+id/select_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="点击选择"
            android:textColor="#000"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/type_text"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:gravity="center"
            android:visibility="invisible"
            android:hint="补充其他类型"/>


        <Button
            android:id="@+id/commit_type_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="添加注解"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/length_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#999"
        android:layout_below="@+id/type_line">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="长度："
            android:textColor="#000"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/get_len_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="点击获取"
            android:textColor="#000"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/length_text"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:gravity="center"/>


        <Button
            android:id="@+id/commit_len_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="添加注解"
            android:textSize="12sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/create_middle_point"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/length_line"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="添加中点"
        android:layout_marginLeft="30dp"
        android:layout_alignLeft="@+id/type_line"/>

    <Button
        android:id="@+id/complete_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/length_line"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/type_line"
        android:layout_marginRight="30dp"
        android:text="编辑完成"/>

</RelativeLayout>